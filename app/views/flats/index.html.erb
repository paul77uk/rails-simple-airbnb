<h4>All our Flats (<%= @flats.count %>)</h4>
<div class="row">
  <% @flats.each do |flat| %>
  <div class="col-12 col-sm-4">
    <div class="card my-3">
      <div class="card-header">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.address %></p>
        <i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %> <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %>
      </div>
      <div class="d-flex align-items-center ps-3 py-2">
        <%= link_to 'More info', flat_path(flat), class: 'card-link text-decoration-none' %>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'card-link text-warning text-decoration-none' %>
        <%= link_to 'Remove', flat_path(flat), class: 'card-link text-danger text-decoration-none',data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  </div>
  <% end %>
</div>
