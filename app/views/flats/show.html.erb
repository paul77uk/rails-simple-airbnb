<div class="row">
  <div class="col-8">
    <div class="card">
      <div class="card-header py-4">
        <div class="card-title h1"><%= @flat.name %></div>
        <p class="card-text fs-5 text fw-light"><%= @flat.address %></p>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header py-4">
        <div class="card-title h3">A bit more about this flat...</div>
        <p class="card-text"><%= @flat.description %></p>
      </div>
    </div>


  <div class="card mt-3">
      <div class="card-header py-4">
        <div class="card-title h3">Details</div>
        <p class="card-text"><i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests %> <i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night %></p>
      </div>
    </div>

  </div>

  <div class="col-4">
    <div class="card">
      <div class="card-header py-4">
        <div class="card-title h5">Book this place!</div>
        <div class="d-flex mb-2">
          <div class="border p-2 bg-secondary-subtle">From:</div>
          <div class="border p-2 bg-body w-100">12/10/2017</div>
        </div>
        <div class="d-flex mb-2">
          <div class="border p-2 bg-secondary-subtle">To:</div>
          <div class="border p-2 bg-body w-100">18/10/2017</div>
        </div>
        <div class="btn btn-success w-100">Book</div>
      </div>
    </div>

  <div class="card mt-3">
      <div class="card-header py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div class="card-title h6 m-0">Share</div>
        <p class="card-text"><i class="fa-brands fa-square-facebook me-1"></i> <i class="fa-brands fa-square-twitter me-1"></i> <i class="fa-brands fa-square-pinterest"></i></p>
      </div>
      </div>
    </div>

  </div>

</div>
